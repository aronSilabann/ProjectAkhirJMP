<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_margin="40dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/keluar"
        android:layout_width="133dp"
        android:layout_height="68dp"
        android:layout_below="@id/inputdata"
        android:layout_alignParentRight="true"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="18dp"
        android:layout_marginBottom="16dp"
        android:background="@android:color/holo_blue_light"
        android:text="Keluar"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        app:icon="@drawable/logout"
        app:iconTint="@color/white" />

    <Button
        android:id="@+id/informasiaplikasi"
        android:layout_width="137dp"
        android:layout_height="68dp"
        android:layout_below="@id/lihatdata"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:background="@android:color/holo_blue_light"
        android:text="Informasi"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:textStyle="bold"
        android:drawableStart="@drawable/infosss"
        android:drawablePadding="8dp" />


    <Button
        android:id="@+id/inputdata"
        android:layout_width="136dp"
        android:layout_height="64dp"
        android:layout_below="@id/imageView2"
        android:layout_alignParentRight="true"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="16dp"
        android:background="@android:color/holo_blue_light"
        android:text="Input Data"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:icon="@drawable/addname" />

    <Button
        android:id="@+id/lihatdata"
        android:layout_width="137dp"
        android:layout_height="64dp"
        android:layout_below="@id/imageView2"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:background="@android:color/holo_blue_light"
        android:text="Lihat Data"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        app:icon="@drawable/lihatdata" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="305dp"
        android:layout_height="238dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="65dp"
        android:paddingBottom="16dp"
        app:srcCompat="@drawable/iicons" />


</RelativeLayout>
